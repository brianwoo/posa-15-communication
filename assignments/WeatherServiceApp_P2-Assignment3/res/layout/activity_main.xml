<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.weatherserviceapp.activities.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoWaySync" 
            android:onClick="fetchWeatherSync"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoWayAsync" 
            android:onClick="fetchWeatherAsync"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp" >

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="Calgary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Overcast Clouds" />
        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingBottom="20dp"
		        android:paddingTop="20dp" >
		
		        <ImageView
		            android:id="@+id/imageViewWeatherIcon"
		            android:layout_width="match_parent"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:paddingRight="-20dp"
		            android:src="@drawable/ic_launcher" />
		
		        <TextView
		            android:id="@+id/textViewTemp"
		            android:layout_width="match_parent"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:paddingLeft="-20dp"
		            android:text="15 C"
		            android:textSize="30sp" />
		
		    </LinearLayout>

		    <TextView
		        android:id="@+id/textViewWind"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingBottom="5dp"
		        android:text="Wind 5km/h" />

		    <TextView
		        android:id="@+id/textViewHumidity"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingBottom="5dp"
		        android:text="Humidity 95%" />

		    <TextView
		        android:id="@+id/textViewSunrise"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingBottom="5dp"
		        android:text="Sunrise 4:00 am" />

		    <TextView
            	android:id="@+id/textViewSunset"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:text="Sunset 9:00 pm" />		    		    		    
		    

    </LinearLayout>

</LinearLayout>